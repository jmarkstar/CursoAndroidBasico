<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jmarkstar.cursoandroidbasico.com.jmarkstar.sesion2.RelativeLayout1Activity">

    <!--
        android:layout_centerInParent="true"
        posiciona la vista en el centro del RelativeLayout.
     -->
    <TextView android:layout_centerInParent="true"
        android:text="TEXTO 1"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        Posiciona la vista al lado derecho del RelativeLayout.
        Ambos sirven para lo mismo, solo que End es para versiones mas actuales,
        y Right para versiones mas antiguas.
     -->
    <TextView android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TEXTO 2"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--
        android:layout_alignParentBottom="true"
        posiciona la vista en la parte inferior del RelativeLayout.
     -->
    <TextView android:layout_alignParentBottom="true"
        android:text="TEXTO 3"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        Posiciona la vista al lado izquierdo del RelativeLayout.
        Ambos sirven para lo mismo, solo que Start es para versiones mas actuales,
        y Left para versiones mas antiguas.
     -->
    <TextView android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="TEXTO 4"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--
        Mezclando propiedades,
        Mover la vista al lado inferior derecho.
     -->
    <TextView android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="TEXTO 5"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_centerVertical="true"
        android:text="TEXTO 6"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TEXTO 7"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_centerHorizontal="true"
        android:text="TEXTO 8"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="TEXTO 9"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
